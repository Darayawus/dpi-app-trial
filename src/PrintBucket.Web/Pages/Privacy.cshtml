    @page
    @using PrintBucket.Web
    @inject Microsoft.Extensions.Localization.IStringLocalizer<SharedResource> L
    @{
        ViewData["Title"] = L["Privacy_Title"];
    }
    <div class="container py-5">
        <div class="row justify-content-center">
            <div class="col-lg-10">
                <div class="card shadow-sm">
                    <div class="card-body">
                    <h1 class="mb-3 display-6">
                        @ViewData["Title"]</h1>

                        <div class="mb-4">
                            @Html.Raw(L["Privacy_Intro"])
                        </div>

                        <section class="mb-4">
                            <h6 class="mb-2 fw-bold">@L["Privacy_DataCollectedTitle"]</h6>
                            <ul class="list-group list-group-flush">
                                <li class="list-group-item">@L["Privacy_DataCollected_Usage"]</li>
                                <li class="list-group-item">@L["Privacy_DataCollected_FileUploads"]</li>
                                <li class="list-group-item">@L["Privacy_DataCollected_Diagnostics"]</li>
                            </ul>
                        </section>

                        <section class="row g-3 mb-4">
                            <div class="col-md-6">
                            <h6 class="mb-2 fw-bold">@L["Privacy_HowWeUseTitle"]</h6>
                                <p class="mb-0">@L["Privacy_HowWeUse"]</p>
                            </div>
                            <div class="col-md-6">
                            <h6 class="mb-2 fw-bold">@L["Privacy_ThirdPartiesTitle"]</h6>
                                <p class="mb-0">@L["Privacy_ThirdParties"]</p>
                            </div>
                        </section>

                        <section class="row g-3 mb-4">
                            <div class="col-md-6">
                            <h6 class="mb-2 fw-bold">@L["Privacy_RetentionTitle"]</h6>
                                <p class="mb-0">@L["Privacy_Retention"]</p>
                            </div>
                            <div class="col-md-6">
                                <h6 class="mb-2 fw-bold">@L["Privacy_SecurityTitle"]</h6>
                                <p class="mb-0">@L["Privacy_Security"]</p>
                            </div>
                        </section>

                        <section class="mb-4">
                        <h6 class="mb-2 fw-bold">@L["Privacy_YourRightsTitle"]</h6>
                            <p class="mb-0">@L["Privacy_YourRights"]</p>
                        </section>

                        <section class="mb-4">
                        <h6 class="mb-2 fw-bold">@L["Privacy_ChildrenTitle"]</h6>
                            <p class="mb-0">@L["Privacy_Children"]</p>
                        </section>

                        <section class="mb-4">
                        <h6 class="mb-2 fw-bold">@L["Privacy_ChangesTitle"]</h6>
                            <p class="mb-0">@L["Privacy_Changes"]</p>
                        </section>

                        <section class="mb-0">
                        <h6 class="mb-2 fw-bold">@L["Privacy_ContactTitle"]</h6>
                            <p class="mb-0">@L["Privacy_Contact"]</p>
                        </section>
                    </div>
                    <div class="card-footer text-muted small">
                        @* Optional: display last updated date or version *@
                        @L["Privacy_Changes"]
                    </div>
                </div>
            </div>
        </div>
    </div>
