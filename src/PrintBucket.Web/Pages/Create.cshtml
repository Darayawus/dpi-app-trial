@page
@model PrintBucket.Web.Pages.CreateModel
@inject Microsoft.Extensions.Localization.IStringLocalizer<SharedResource> L
@{
    ViewData["Title"] = L["NavCreate"];
}

<div class="container py-5">
    <div class="row justify-content-center">
        <div class="col-12 col-md-8 col-lg-6">
            <div class="card shadow-sm">
                <div class="card-body">
            <h1 class="display-6 mb-4">@L["CreateTitle"]</h1>
            
            <form id="createForm" method="post" class="needs-validation" novalidate>
                @if (!ModelState.IsValid && ModelState[string.Empty]?.Errors.Any() == true)
                {
                    <div class="alert alert-danger mb-4">
                        @foreach (var error in ModelState[string.Empty].Errors)
                        {
                            <p class="mb-0">@error.ErrorMessage</p>
                        }
                    </div>
                }

                <div class="mb-4">
                    <label asp-for="Input.Email" class="form-label">@L["EmailLabel"]</label>
                    <input asp-for="Input.Email" class="form-control form-control-lg" type="email" required />
                    <span asp-validation-for="Input.Email" class="text-danger"></span>
                    <div class="form-text">@L["EmailHelp"]</div>
                </div>

                <div class="mb-4">
                    <label asp-for="Input.Name" class="form-label">@L["NameLabel"]</label>
                    <input asp-for="Input.Name" class="form-control form-control-lg" required />
                    <span asp-validation-for="Input.Name" class="text-danger"></span>
                </div>

                <div class="mb-4">
                    <div class="form-check">
                        <input asp-for="Input.AcceptTerms" class="form-check-input" type="checkbox" required />
                        <label asp-for="Input.AcceptTerms" class="form-check-label">
                            @L["AcceptTerms"]
                            <a class="ms-2" href="@Url.Page("/Privacy")" target="_blank" rel="noopener">
                                @L["Privacy_Title"]
                            </a>
                        </label>
                        <span asp-validation-for="Input.AcceptTerms" class="text-danger"></span>
                    </div>
                </div>

                <button id="createSubmit" type="submit" class="btn btn-primary btn-lg btn-app w-100 d-inline-flex align-items-center justify-content-center">
                    <span id="createSpinner" class="spinner-border spinner-border-sm me-2 d-none" role="status" aria-hidden="true"></span>
                    <span>@L["CreateButton"]</span>
                </button>
            </form>
            </div>            
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
    <script>
        (function() {
            const form = document.getElementById('createForm');
            const submitBtn = document.getElementById('createSubmit');
            const spinner = document.getElementById('createSpinner');

            if (form && submitBtn && spinner) {
                form.addEventListener('submit', function(e) {
                    if (this.checkValidity()) {
                        spinner.classList.remove('d-none');
                        submitBtn.setAttribute('disabled', 'disabled');
                    }
                });

                // Ocultar spinner si hay errores después de postback
                document.addEventListener('DOMContentLoaded', function() {
                    if (document.querySelector('.validation-summary-errors, .field-validation-error, .alert-danger')) {
                        spinner.classList.add('d-none');
                        submitBtn.removeAttribute('disabled');
                    }
                });
            }
        })();
    </script>
}